<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:BrainWaves.ViewModels"
             xmlns:resource="clr-namespace:BrainWaves.Resources.Strings"
             xmlns:microchart="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms"
             xmlns:helpers="clr-namespace:BrainWaves.Helpers"
             NavigationPage.HasNavigationBar="False"
             Title="{Binding Title}"
             BackgroundColor="{AppThemeBinding Dark=Black, Light=CadetBlue}"
             x:Class="BrainWaves.Views.ChartsPage">
    <ContentPage.BindingContext>
        <viewModels:ChartsViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" VerticalOptions="Start"
                             BackgroundColor="{StaticResource PrimaryColor}">
                    <OnPlatform x:TypeArguments="View">
                        <On Platform="iOS, Android, UWP">
                            <ImageButton Source="{helpers:ImageResource Source=BrainWaves.Resources.Images.back.png}" 
                             Command="{Binding GoBackCommand}" HorizontalOptions="Start"
                             Margin="20,5,0,5" Scale="0.8" BackgroundColor="Transparent"/>
                        </On>
                        <On Platform="macOS">
                            <Button Text="{Static resource:Resource.GoBackText}" TextColor="Black" BackgroundColor="{StaticResource PrimaryColor}"
                                Command="{Binding GoBackCommand}" HorizontalOptions="Start"
                                Margin="20,5,0,5" Scale="0.8" />
                        </On>
                    </OnPlatform>
                    <Label Text="{Binding Title}" Style="{StaticResource LabelStyleTitle}" TextColor="White" 
                       VerticalOptions="Center" HorizontalOptions="Start" Margin="20,0,0,0"/>
                </StackLayout>
                <Label 
                    Text="Time domain"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    FontSize="Large"
                    Style="{StaticResource LabelStyleNormal}"/>
                <microchart:ChartView
                    x:Name="ChartHumidity"
                    Chart="{Binding FrequencyChart}"
                    HeightRequest="250"
                    Margin="0,0,0,40"/>

                <Label 
                    Text="Frequency domain"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    FontSize="Large"
                    Style="{StaticResource LabelStyleNormal}"/>
                <microchart:ChartView
                    x:Name="ChartSoilMoisture"
                    Chart="{Binding FrequencyChart}"
                    HeightRequest="250"
                    Margin="0,0,0,40"/>

                <Button 
                    Command="{Binding ExportToExcelCommand}"
                    Text="{Static resource:Resource.ExportToExcell}"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    Margin="0,20,0,60"
                    WidthRequest="250"
                    Style="{StaticResource ButtonStyleNormal}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>